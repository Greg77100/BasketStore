{% extends 'base.html.twig' %}

{% block h1 %}<h1 class="title">{{ category.name|capitalize }}</h1>{% endblock %}

{% block body %}

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_admin') }}">Back office</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_category_index') }}">Gestion des catégories</a></li>
            <li class="breadcrumb-item active" aria-current="page">Fiche</li>
        </ol>
    </nav>

    <table class="table table-striped table-hover table-bordered text-center mt-4">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name|capitalize }}</td>
            </tr>
            
                    
        </tbody>
    </table>

    {% if category.products|length > 0 %}
    
        <table class="table table-striped table-hover table-bordered text-center mt-4">
            <thead class="table-warning">
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Prix (€)</th>
                </tr>
            </thead>

            <tbody>

                {% for product in category.products %}
                    <tr class="align-middle">
                        <td>{{ product.id }}</td>
                        <td>{{ product.title|capitalize }}</td>
                        <td>{{ product.price }}</td>
                    </tr>
                {% endfor %}
                
            </tbody>
        </table>
    
    {% endif %}

{% endblock %}
